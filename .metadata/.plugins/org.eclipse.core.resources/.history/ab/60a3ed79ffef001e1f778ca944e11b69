    pageEncoding="UTF-8"%>
<%
	int a = 10;

	//이미 이 구역은 메서드 내부라 메서드/클래스 선언 불가능 => 선언부 등장
	/* 
		public void test() {
		
		}
	*/
	/*
		class Test {
		
		}
	*/

%>    
<%!
	//선언부
	int b = 20;

	//메서드 사용 가능!
	public int sum(int a, int b) {
		return a + b;
	}
%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<div>10 + 20 = <%= sum(10, 20) %></div>
	<div>30 + 40 = <%= sum(30, 40) %></div>
</body>
</html>